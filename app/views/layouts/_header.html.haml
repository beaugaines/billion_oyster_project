%header 
  .row
    .large-6.small-2.columns
      .logo
        .hide-for-small
          = link_to "BOP", root_path, class: 'root_link'
        .show-for-small
          /= link_to(image_tag('tractor.png'), root_path)
    .large-6.small-2.columns
      .show-for-small
        .dropit-wrapper
          %ul.dropdown-menu
            %li 
              = link_to(image_tag('drop.png'), '')
              %ul
                %li= link_to 'Logout', destroy_user_session_path, method: :delete
                %li= link_to 'My account', ''
      .hide-for-small
        .user_nav
          - if current_user.present?
            =link_to 'Sign out', destroy_user_session_path, method: :delete
          - else
            = link_to 'Sign in', new_user_session_path


