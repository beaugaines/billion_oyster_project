!!! 5
%html{ :lang => "en"}
  %head
    %meta{ :charset => "utf-8" }
    
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : "Untitled"

    = stylesheet_link_tag "application"
    = javascript_include_tag "custom.modernizr"
    %script{src: "http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"}
    = csrf_meta_tag

  %body
    = render 'layouts/header'
    = toastr_flash

    .row
      // sidebar
      .large-3.columns
        .panel
          %a{href: "#"}
            %img{src: "http://placehold.it/300x240&text=[img]"}/
          %h5
            %a{href: "#"} Joe User
          .section-container.vertical-nav{"data-options" => "deep_linking: false; one_up: true", "data-section" => ""}
            %section.section
              %h5.title
                %a{href: "#"} My Dashboard
            %section.section
              %h5.title
                %a{href: "#"} My Observations
            %section.section
              %h5.title
                = link_to 'My Posts', posts_path
            %section.section
              %h5.title
                %a{href: "#"} Following
            %section.section
              %h5.title
                = link_to 'Chat', chat_path, data: { :'no-turbolink' => '' }

      .large-9.columns
        = yield

    = render 'layouts/footer'

    = javascript_include_tag "application"
    = cloudinary_js_config
