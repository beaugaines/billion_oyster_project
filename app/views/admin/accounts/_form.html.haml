%form
  %input#geocomplete{placeholder: "Type an address and hit enter", type: "text"}/
  .map_canvas

= simple_form_for [:admin, @account], url: admin_accounts_path do |f|
  = f.input :name
  = f.association :user, label: 'Account Moderator', label_method: :email, value_method: :id
  = f.input :city, as: :string, input_html: { data: { geo: 'locality' } }
  = f.input :full_address, as: :string, input_html: { data: { geo: 'formatted_address' } }
  = f.input :lat, as: :hidden, input_html: { data: { geo: 'lat' } }
  = f.input :lon, as: :hidden, input_html: { data: { geo: 'lng' } }
  = f.submit

%script{src: "http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"}
%script{src: "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js", type: "text/javascript"}
